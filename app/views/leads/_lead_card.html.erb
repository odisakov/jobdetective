      <div class="board-item" data-lead-id="<%= lead.id %>">

       <div class="board-item-content">
        <%= image_tag lead.person.linkedin_pic_url, class: "lead-avatar" %>
        <h2><%= "#{lead.person.first_name}" %></h2>
        <h2><%= "#{lead.person.last_name}" %></h2>
        <div class="role">
          <p><%= lead.person.employment_role %> @ <%= link_to lead.person.company.name, company_path(lead.person.company), class: "company-link" %></p>
        </div>
        <div class="mail-lead">

        <a href=<%="https://www.linkedin.com/search/results/index/?keywords=#{lead.person.first_name}%20#{lead.person.last_name}" %> target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
          <% if lead.person.email %>
          <a href=<%="mailto:#{lead.person.email}"%>><i class="fa fa-envelope" aria-hidden="true"></i></a>
          <% end %>
        </div>
        <div class="deleter">
          <% if lead.status == "declined" %>
            <%= link_to lead_path(lead), class: "btn btn-danger btn-sm deniedbtn ", method: :delete, remote: :true, id: "close-button-#{lead.id}" do %><span><i class="fa fa-times" aria-hidden="true"></i></span><% end %>

          <% end %>
        </div>
      </div>
    </div>


